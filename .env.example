# nom-nom Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to git

# =============================================================================
# REQUIRED
# =============================================================================

# Database (CockroachDB)
# Use sslmode=verify-full in production
DATABASE_URL=postgresql://user:password@localhost:26257/nomnom?sslmode=require

# Session secret (generate with: openssl rand -base64 32)
SESSION_SECRET=

# =============================================================================
# OPTIONAL (defaults shown)
# =============================================================================

# Server binding
# HOST=0.0.0.0
# PORT=8080

# TLS (app terminates TLS directly via rustls)
# TLS is REQUIRED by default. Provide cert paths or set INSECURE_NO_TLS for dev.
TLS_CERT_PATH=/certs/tls.crt
TLS_KEY_PATH=/certs/tls.key

# Development only: disable TLS (NEVER use in production)
# INSECURE_NO_TLS=true

# Logging (trace, debug, info, warn, error)
# LOG_LEVEL=info

# Environment (development, test, production)
# ENVIRONMENT=development

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# AI ingredient recognition service
# ENABLE_AI_SERVICE=false
# AI_SERVICE_URL=
# AI_SERVICE_API_KEY=
